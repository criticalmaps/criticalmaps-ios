  desc 'Run unit tests'
  lane :test do
    scan(
      project: "CriticalMaps.xcodeproj",
      scheme: Scheme,
      device: 'iPhone 16 Pro (18.4)',
      result_bundle: true,
      xcargs: '-skipPackagePluginValidation -skipMacroValidation'
    )
    trainer(path: "./fastlane/test_output", output_directory: "./fastlane")
  end
end
